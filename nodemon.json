{
  "verbose": true,
  "legacy-watch": true,
  "ignore": ["server/logs/*","*.log","install.sh",".editorconfig",".jshintignore",".jshintrc",".yo-rc.json","nodemon.json","*.test.js", "test/*",".idea/*",".idea/workspace.xml","client/**","*.html","*.css","*.scss",".DS_Store","*.md",".keep","*.markdown"],
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "*,-strong-remoting:*"
  },
  "ext": "js json ejs"
}
